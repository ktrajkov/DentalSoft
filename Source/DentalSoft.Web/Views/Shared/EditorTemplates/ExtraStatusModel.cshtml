                                @Html.Label(Strings.ExtraStatus_TParastezia)
                            </div>
                            <div class="col-md-1">
                                @Html.Kendo().CheckBoxFor(m => m.TParastezia)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-1">
                                @Html.Label(Strings.ExtraStatus_TPareza)
                            </div>
                            <div class="col-md-1">
                                @Html.Kendo().CheckBoxFor(m => m.TPareza)
