                            </div>
                            <div class="col-md-1">
                                @Html.Kendo().CheckBoxFor(m => m.FPareza)
                            </div>
                        </div>
                    </div>
                </div>@*Н.Тригеминус*@
            </div>
            <div class="col-md-6">
                <div class="row nested-row">
                    <div class="col-md-12">
                        <div class="row nested-row">
                            <div class="col-md-12">
                                @Html.Label(Strings.ExtraStatus_Simetria)
